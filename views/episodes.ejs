<%- include('header', { title, active: 'episodes'}); -%>




  <div class="container-fluid mt-3">
    <head>




    <!-- Jumbotron -->
    <div class="jumbotron text-center">
    
      <!-- Title -->
      <h4 class="card-title h4 pb-2"><strong><%= podcast.title %></strong></h4>
      <img src="/<%= podcast.image %>"  class="img-fluid" alt=""  id="podcastImageTop" >
      <!-- Card image -->
      <div class="view overlay my-4">
       
        <a href="#">
          <div class="mask rgba-white-slight"></div>
        </a>
      </div>
    
      <h5 class="indigo-text h5 mb-4"><%= podcast.category %></h5>
    
      <p class="card-text"><%= podcast.description %></p>   
  
    </div>
    <!-- Jumbotron -->


      <div class="jumbotron">
        <img src="/<%= podcast.image %>"  class="figure-img" alt=""  id="podcastImageTop" >  
        <h1 class="display-4"><%= podcast.title %></h1>
        <p class="lead"><%= podcast.description %></p>
        <hr class="my-4">
        <%if (logged){%>
         <%if(following == undefined){%>
          <form method="POST" action="/follows">
            <input type="hidden" name="podcastID" value="<%- podcast.podcastID %>">
            <button type="submit" class="btn btn-primary">follow</button>
          </form>
            
         
          <%}else{%>
            <form method="POST" action="/follows/<%-following.followID%>?method=DELETE" name="followedDelete">
              <input type="hidden" name="followID" value="<%- following.followID %>">
              <button type="submit" class="btn btn-primary">unfollow</button>
            </form>
              
              <% } %>
          <%}else{%>
            <a href="/login">
              <button type="submit" class="btn btn-primary">follow</button>
            </a>
          <%}%>
      </div>
    </head>
      <div class="row">
          <tbody>
            <% episodes.forEach((episode) => { %>
              <%- include('episode-partial', {episode}); -%>
            <% }); %>
          </tbody>
 
      </div>
    </div>










































<%- include('footer'); -%>
