<%- include('header', { title, active: 'episodes'}); -%>
<main class="container-fluid mt-3">
  <head>
    <div class="jumbotron">
      <h1 class="display-4"><%= podcast.title %></h1>
      <p class="lead"><%= podcast.description %></p>
      <hr class="my-4">
      <%if (logged){%>
       <%if(following == false){%>
        <form method="POST" action="/podcast/follow">
          <%following = true;%>
          <input type="hidden" name="podcastID" value="<%- podcast.podcastID %>">
          <button type="submit" class="btn btn-primary">follow</button>
          
       
        <%}else{%>
          <form method="POST" action="/podcast/unfollow">
            <input type="hidden" name="podcastID" value="<%- podcast.podcastID %>">
            <button type="submit" class="btn btn-primary">unfollow</button>
            
            <% } %>
        <%}else{%>
          <a href="/login">
            <button type="submit" class="btn btn-primary">follow</button>
          </a>
        <%}%>
    </div>
  </head>
    <div class="row">
      <div class = "col">
        <tbody>
          <% episodes.forEach((episode) => { %>
            <%- include('episode-partial', {episode}); -%>
          <% }); %>
        </tbody>
      </div>  
    </div>
</main>

<%- include('footer'); -%>
