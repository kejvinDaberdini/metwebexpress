<%- include('header', {title, active: 'Search'}); -%>
<h1><%=logged%></h1>

<nav class="navbar navbar-light bg-light">
  <form class="form-inline" action="/search" method="GET">
    <input class="form-control mr-sm-2" type="search" name="text" placeholder="Search" aria-label="Search">
    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
      <label for="inputNewCategory"> </label>   
      <select class="custom-select" name="newCategory" id="inputNewCategory">
        <option value="All" selected>All</option>  
        <% for(let i=0; i < categories.length; i++){%>
          <option value ="<%- categories[i].name %>" ><%= categories[i].name%> </option>
        <%}%>
      </select>  

  </form>
</nav>


<main class="container-fluid mt-3">
    <div class="row col-6">
          
            <tbody>
                <h3>Found podcasts</h3>
              <% podcasts.forEach((podcast) => { %>
                <%- include('podcast-partial', {podcast}); -%>
              <% }); %>
            </tbody>
            <tbody>
                <h3>Found episodes</h3>
                <% episodes.forEach((episode) => { %>
                  <%- include('episode-partial', {episode}); -%>
                <% }); %>
              </tbody>      
    </div>
</main>

<%- include('footer'); -%>

